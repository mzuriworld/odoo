<odoo>
    <record id="view_product_configurator_step_form" model="ir.ui.view">
        <field name="name">product.configurator.step.form</field>
        <field name="model">product.configurator.step</field>
        <field name="arch" type="xml">
            <form string="Product Configurator Step">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="attribute_id"/>
                        <field name="value_id"/>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_configurator_step_tree" model="ir.ui.view">
        <field name="name">product.configurator.step.tree</field>
        <field name="model">product.configurator.step</field>
        <field name="arch" type="xml">
            <tree string="Product Configurator Steps">
                <field name="name"/>
                <field name="product_id"/>
                <field name="attribute_id"/>
                <field name="value_id"/>
            </tree>
        </field>
    </record>
</odoo>
