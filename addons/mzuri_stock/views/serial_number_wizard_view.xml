<!-- In mzuri_stock/views/serial_number_wizard_view.xml -->
<odoo>
    <record id="view_serial_number_wizard_form" model="ir.ui.view">
        <field name="name">serial.number.wizard.form</field>
        <field name="model">serial.number.wizard</field>
        <field name="arch" type="xml">
            <form string="Serial Number Assignment">
                <group>
                    <field name="product_id"/>
                    <field name="serial_number"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_serial_number_wizard_tree" model="ir.ui.view">
        <field name="name">serial.number.wizard.tree</field>
        <field name="model">serial.number.wizard</field>
        <field name="arch" type="xml">
            <tree string="Serial Number Assignments">
                <field name="product_id"/>
                <field name="serial_number"/>
            </tree>
        </field>
    </record>
</odoo>

